<h1>Car Listing</h1>

<table class="table table-hover table-striped text-center">
  <thead>
    <tr>
      <th scope="col">Brand</th>
      <th scope="col">Model</th>
      <th scope="col">Body Type</th>
      <th scope="col">Door Count</th>
      <th scope="col">Seat Count</th>
      <th scope="col">Available?</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td scope="row" class="align-middle"><%= vehicle.brand %></td>
        <td scope="row" class="align-middle"><%= vehicle.model %></td>
        <td scope="row" class="align-middle"><%= vehicle.body_type %></td>
        <td scope="row" class="align-middle"><%= vehicle.door_count %></td>
        <td scope="row" class="align-middle"><%= vehicle.seat_count %></td>
        <% if vehicle.available %>
          <td scope="row" class="align-middle">✅</td>
        <% else %>
          <td scope="row" class="align-middle">❌</td>
        <% end %>
        <td scope="row" class="align-middle p-0"><a class="btn btn-primary btn-sm" href="<%= vehicle_path(vehicle.id) %>" role="button">Show</a></td>
        <td scope="row" class="align-middle p-0"><a class="btn btn-primary btn-sm" href="<%= edit_vehicle_path(vehicle.id) %>" role="button">Edit</a></td>
        <td scope="row" class="align-middle p-0"><button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#ConfirmDelete">Delete</button></td>
      </tr>
        <!-- Modal -->
      <div class="modal fade" id="ConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="ConfirmDelete" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="ConfirmDelete">Confirm</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Are you sure?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <%= link_to 'Delete', delete_vehicle_path(vehicle.id), method: :delete, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </tbody>
</table>
