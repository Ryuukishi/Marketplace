<h1>Car Listing</h1>

<table class="table table-hover table-striped text-center">
  <thead>
    <tr>
      <th scope="col">Brand</th>
      <th scope="col">Model</th>
      <th scope="col">Body Type</th>
      <th scope="col">Door Count</th>
      <th scope="col">Seat Count</th>
      <th scope="col">Available?</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td scope="row" class="align-middle p-0"><%= vehicle.brand %></td>
        <td scope="row" class="align-middle p-0"><%= vehicle.model %></td>
        <td scope="row" class="align-middle p-0"><%= vehicle.body_type %></td>
        <td scope="row" class="align-middle p-0"><%= vehicle.door_count %></td>
        <td scope="row" class="align-middle p-0"><%= vehicle.seat_count %></td>
        <% if vehicle.available %>
          <td scope="row" class="align-middle p-0">✅</td>
        <% else %>
          <td scope="row" class="align-middle p-0">❌</td>
        <% end %>
        <td scope="row"><a class="btn btn-primary btn-sm align-middle" href="<%= vehicle_path(vehicle.id) %>" role="button">Show</a></td>
      </tr>
    <% end %>
  </tbody>
</table>


